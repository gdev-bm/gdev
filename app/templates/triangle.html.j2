{% extends "base.html.j2" %} {% block title %}Triangle App{% endblock %} {%
block description %}Triangle: Bermuda's everything app{% endblock %} {% block
content %}
<div class="triangle-container">
  <div class="landing-content">
    <div class="text-content">
      <h1 class="app-title">Triangle</h1>
      <p class="app-tagline">Bermuda's everything app</p>
      <div class="download-buttons">
        <a href="#" class="download-badge">
          <img
            src="/static/images/google-play.png"
            alt="Get it on Google Play"
          />
        </a>
        <a href="#" class="download-badge">
          <img src="/static/images/app-store.svg" alt="Download on App Store" />
        </a>
      </div>
    </div>
    <div class="phone-image">
      <img
        src="/static/images/triangle-splash.png"
        alt="Triangle App on Mobile Phone"
      />
    </div>
  </div>
</div>
{% endblock %} {% block extra_head %}
<style>
  .triangle-container {
    max-width: 1000px;
    margin: 0 auto;
    margin-top: 6rem;
    padding: 2rem;
  }

  .landing-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .text-content {
    flex: 1;
  }

  .app-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #fff;
  }

  .app-tagline {
    font-size: 1.25rem;
    color: var(--color-text2);
    margin-bottom: 2rem;
  }

  .download-buttons {
    display: flex;
    flex-direction: row;
    gap: 1rem;
  }

  .download-badge {
    display: flex;
    align-items: center;
    transition: all 0.3s ease;
    width: 180px;
    height: 54px;
    /* Ratio is approximately 10:3 or 3.33:1 */
  }

  .download-badge img {
    width: 100%;
    height: 100%;
  }

  .download-badge:hover {
    filter: brightness(0.8);
  }

  .button-icon {
    margin-right: 0.5rem;
  }

  .download-button:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }

  .phone-image {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .phone-image img {
    max-width: 100%;
    height: auto;
    max-height: 500px;
  }

  @media (max-width: 768px) {
    .landing-content {
      flex-direction: column-reverse;
      text-align: center;
    }

    .download-buttons {
      align-items: center;
    }
  }
</style>
{% endblock %}
